<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>
  
  <% include ../partials/nav.ejs %>

  <h2>Users</h2>
    <div class="results">
        <div class="user">
            <div class="id">ID</div>
            <div class="firstname">First Name</div>
            <div class="lastname">Last Name</div>
        </div>
    </div>

<script>
    $.get( "/api/user", function ( data ) {
        for (var i = 0; i < data.length; i++) {
            var user = $('.user').first().clone();
            user.find('.id').text(data[i].user_id)
            user.find('.firstname').text(data[i].first_name)
            user.find('.lastname').text(data[i].last_name)
            $('.results').append(user);
        }
    });
</script>
</body>
</html>
